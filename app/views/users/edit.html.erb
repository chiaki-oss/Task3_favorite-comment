<!--　プロフィール編集画面 -->
<!--　エラーメッセージ  -->
<% if @user.errors.any? %>
<div id="error_explanation">
  <h5><%= pluralize(@user.errors.count, "error") %>prohibited this article from being saved:</h5>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h2 class="form-header-title">User info</h2>
<%= form_for(@user) do |f| %>
<!--  Name -->
<div class="field">
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, class:"name", id:"user_name", placeholder:"名前" %>
</div>
<!-- Image -->
<div class="field">
  <label for="user_image">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
</div>
<!-- Introduction -->
<div class="field">
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, class:"introduction", id:"user_introduction" %>
</div>
<!-- Updateボタン -->
<div class="field">
<%= f.submit "Update User", class:"data-disable-with" %>
<% end %>
</div>

