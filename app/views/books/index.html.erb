<!-- Books画面 -->
<!--　エラーメッセージ  -->
<% if @book.errors.any? %>
<div id="error_explanation">
	<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>


<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %>
		<table class="table">
			<tbody>
				<tr></tr>
				<tr>
					<th>name</th>
					<th><%= current_user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= current_user.introduction %></th>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<% if @user.id == current_user.id %>
			<p><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
			<% end %>
		</div>

		<!-- 新規投稿 -->
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
		<div class="field row">
			<%= f.label :title %><br>
			<%= f.text_field :title,class:"col-xs-12 book_title" %>
		</div>
		<div class="field row">
			<%= f.label :opinion %><br>
			<%= f.text_area :body, class:"col-xs-12 book_body" %>
		</div>
		<div class="actions row">
			<%= f.submit 'Create Book',class:"btn btn-primary col-xs-12"  %>
		<% end %>
		</div>
	</div>
	<!--  BOOKS -->
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<!-- profile-img / Users詳細へ -->
					<td>
						<%= link_to user_path(book.id) do %>
						<%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", class: "pull-left profile-img", size:"40x40" %>
						<% end %>
					</td>
					<!-- title / Books詳細画面へ -->
					<td class="title">
						<%= link_to book.title, book_path(book.id)  %>
					</td>
					<td class="body"><%= book.body %></td>

					<!-- favorites -->
					<% if book.favorited_by?(current_user) %>
					<td>
						<%= link_to book_favorites_path(book),method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<%= @book.favorites.count %>
						<% end %>
					</td>

					<% else %>
					<td>
						<%= link_to book_favorites_path(book),method: :post do %>
						<i class="fa fa-heart" aria-hidden="true"></i>
						<%= book.favorites.count %>
						<% end %>
					</td>
					<% end %>

				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

