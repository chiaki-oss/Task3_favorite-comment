<!-- Books画面 -->
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<!-- 新規投稿 -->
		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>
	<!--  BOOKS -->
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<!-- profile-img / Users詳細へ -->
					<td>
						<%= link_to user_path(book.id) do %>
						<%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", class: "pull-left profile-img", size:"40x40" %>
						<% end %>
					</td>
					<!-- title / Books詳細画面へ -->
					<td class="title">
						<%= link_to book.title, book_path(book.id)  %>
					</td>
					<td class="body"><%= book.body %></td>

					<!-- favorites -->
					<% if book.favorited_by?(current_user) %>
					<td>
						<%= link_to book_favorites_path(book),method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<%= @book.favorites.count %>
						<% end %>
					</td>

					<% else %>
					<td>
						<%= link_to book_favorites_path(book),method: :post do %>
						<i class="fa fa-heart" aria-hidden="true"></i>
						<%= book.favorites.count %>
						<% end %>
					</td>
					<% end %>

					<!-- comment -->
					<td> <%= "コメント数 : #{book.book_comments.count}" %>
					</td>

				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

